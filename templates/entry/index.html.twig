{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ 'app.header.entry_list'|trans }}{% endblock %}

{% block body %}
    <h3>{{ 'app.header.entry_list'|trans }}</h3>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'app.field.entry.entry'|trans }}</th>
                <th>{{ 'app.field.entry.content'|trans }}</th>
                <th>{{ 'app.field.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entry in entries %}
            <tr>
                <td>{{ entry.title }}</td>
                <td>{{ entry.content|markdown }}</td>
                <td class="d-flex">
                    <a id="edit_entry_{{ entry.id }}" class="btn btn-primary mr-2" href="{{ path('entry_edit', {'id': entry.id}) }}">{{ 'app.button.edit'|trans }}</a>
                    {% include 'entry/_delete_form.html.twig' %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'app.info.nothing_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('entry_new') }}">{{ 'app.link.create_new'|trans }}</a>
{% endblock %}
