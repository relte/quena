{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ 'app.header.answer_list'|trans }}{% endblock %}

{% block body %}
    <h3>{{ 'app.header.answer_list'|trans }}</h3>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'app.field.answer.entry'|trans }}</th>
                <th>{{ 'app.field.answer.content'|trans }}</th>
                <th>{{ 'app.field.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.entry }}</td>
                <td>{{ answer.content|markdown }}</td>
                <td class="d-flex">
                    <a id="edit_answer_{{ answer.id }}" class="btn btn-primary mr-2" href="{{ path('answer_edit', {'id': answer.id}) }}">{{ 'app.button.edit'|trans }}</a>
                    {% include 'answer/_delete_form.html.twig' %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'app.info.nothing_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('answer_new') }}">{{ 'app.link.create_new'|trans }}</a>
{% endblock %}
