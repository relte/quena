{% extends 'base.html.twig' %}

{% block body %}
    <form method="get" action="/">
        <input name="search" type="text">
        <button type="submit">Search</button>
    </form>

    {% if answers is defined and answers is not empty %}
        {% for answer in answers %}
            <ul>
                <li>
                    <strong>{{ answer.question }}</strong>
                    <br>
                    <p>{{ answer.content }}</p>
                </li>
            </ul>
        {% endfor %}
    {% endif %}
{% endblock %}
