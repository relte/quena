{% extends 'base.html.twig' %}

{% block main %}
    <div class="d-flex flex-column align-items-center">
        {{ parent() }}
        <form class="form-inline mb-4" method="get" action="/">
            <input class="form-control mr-2" name="search" type="text">
            <button id="search" class="btn btn-primary action-search" type="submit">{{ 'app.button.search'|trans }}</button>
        </form>
        <a href="{{ path('answer_index') }}">{{ 'app.link.manage_answers'|trans }}</a>
    </div>
{% endblock %}

{% block body %}
    {% if answers is defined and answers is not empty %}
        {% for answer in answers %}
            <div class="card mt-3">
                <div class="card-header">{{ answer.question }}</div>
                <div class="card-body">
                    <div class="card-text">{{ answer.content|markdown }}</div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
