#!/usr/bin/env bash

echo "Building the nginx image..."
ln -fs docker/nginx/.dockerignore .dockerignore
docker build -f ./docker/nginx/Dockerfile -t zelton/quena-nginx:0.1 .

echo "Building the php image..."
ln -fs docker/php/.dockerignore .dockerignore
docker build -f ./docker/php/Dockerfile -t zelton/quena-php:0.1 .

rm .dockerignore
